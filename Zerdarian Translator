<script>
// Zerdarian alphabet mapping
const map = {
  "a":"ğ“‚€",
  "b":"âŸ",
  "c":"Ï¾",
  "d":"áš§",
  "e":"ê™®",
  "f":"Æ’",
  "g":"ğŒˆ",
  "h":"â”",
  "i":"â… ",
  "j":"Éˆ",
  "k":"ğˆ",
  "l":"â…ƒ",
  "m":"ğ“…“",
  "n":"â‚ª",
  "o":"âŠ™",
  "p":"Â¶",
  "q":"Ï˜",
  "r":"ğ‚",
  "s":"Â§",
  "t":"âŠ¥",
  "u":"âˆª",
  "v":"âˆ‡",
  "w":"Ñª",
  "x":"âœ•",
  "y":"â¸¸",
  "z":"Æµ"
};

function translateText() {
  let text = document.getElementById("input").value.toLowerCase();
  let result = "";
  for (let ch of text) {
    result += map[ch] || ch;
  }
  document.getElementById("output").value = result;
}
</script>

